<html>

<head>
    <meta charset="utf-8">
    <title>DATA BUKU</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>

<body>
    <div class="container mt-4">
        <h2>DATA BUKU</h2>
        <br>
            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#addPostModal">
                TAMBAH DATA
            </button>
        <div class="my-2">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <td>Judul</td>
                        <td>Pengarang</td>
                        <td>Penerbit</td>
                        <td>Aksi</td>
                    </tr>
                </thead>
                <tbody>
                    {{#each posts}}
                    <tr>
                        <td>{{ id }}</td>
                        <td>{{ judul }}</td>
                        <td>{{ pengarang }}</td>
                        <td>{{ penerbit }}</td>
                        <td>
                            <button type="button" class="btn btn-sm btn-info edit-post" data-id="{{ id }}"
                                data-judul="{{ judul }}" data-pengarang="{{ pengarang }}" data-penerbit="{{ penerbit }}">PERBARUI</button>
                            <button type="button" class="btn btn-sm btn-info detail-post" data-id="{{ id }}" data-judul="{{ judul }}"
                                data-pengarang="{{ pengarang }}" data-penerbit="{{ penerbit }}">DETAIL</button>
                            <button type="button" class="btn btn-sm btn-danger delete-post"
                                data-id="{{ id }}">HAPUS</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

    <div id="addPostModal" class="modal fade">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Tambah Data</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <form action="/posts" method="POST">
                        <div class="form-group">
                            <label for="judul">Judul</label>
                            <input type="text" class="form-control" name="judul" id="judul">
                        </div>
                        <div class="form-group">
                            <label for="pengarang">Pengarang</label>
                            <input type="text" class="form-control" name="pengarang" id="pengarang">
                        </div>
                        <div class="form-group">
                            <label for="penerbit">Penerbit</label>
                            <input type="text" class="form-control" name="penerbit" id="penerbit">
                        </div>
                        <div class="form-group text-center">
                            <button class="btn btn-primary" type="submit">TAMBAH</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div id="editPostModal" class="modal fade">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="modal-title">PEMBARUAN</div>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <form action="/posts/edit" method="POST">
                        <input type="hidden" name="id" id="edit_id">
                        <div class="form-group">
                            <label for="edit_judul">Judul</label>
                            <input type="text" class="form-control" name="judul" id="edit_judul">
                        </div>
                        <div class="form-group">
                            <label for="edit_pengarang">Pengarang</label>
                            <input type="text" class="form-control" name="pengarang" id="edit_pengarang">
                        </div>
                        <div class="form-group">
                            <label for="edit_penerbit">Penerbit</label>
                            <input type="text" class="form-control" name="penerbit" id="edit_penerbit">
                        </div>
                        <div class="form-group text-center">
                            <button class="btn btn-primary" type="submit">PERBARUI</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div id="deletePostModal" class="modal fade">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="modal-title">KONFIRMASI HAPUS</div>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <form action="/posts/delete" method="POST">
                        <div class="form-group">
                            <p>ANDA YAKIN MENGHAPUS DATA INI??</p>
                            <input type="hidden" id="delete_id" name="id">
                        </div>
                        <div class="form-group text-center">
                            <button class="btn btn-danger" type="submit">HAPUS</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div id="DetailPostModal" class="modal fade">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="modal-title">DETAIL</div>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <form action="/" style="padding: 15px;">
                    <input type="hidden" name="id" id="edit_id">
                    <div class="form-group">
                        <label for="edit_judul">Judul</label>
                        <input type="text" class="form-control" name="judul" id="detail_judul" readonly>
                    </div>
                    <div class="form-group">
                        <label for="edit_pengarang">Pengarang</label>
                        <input type="text" class="form-control" name="pengarang" id="detail_pengarang" readonly>
                    </div>
                    <div class="form-group">
                        <label for="edit_penerbit">Penerbit</label>
                        <input type="text" class="form-control" name="penerbit" id="detail_penerbit" readonly>
                    </div>
                    <div class="form-group text-center">
                        <button class="btn btn-primary" type="submit">KELUAR</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <script>
        $('.edit-post').on('click', function () {
            var id = $(this).data('id')
            var judul = $(this).data('judul')
            var pengarang = $(this).data('pengarang')
            var penerbit = $(this).data('penerbit')

            $('#editPostModal').modal('show')

            $('#edit_id').val(id)
            $('#edit_judul').val(judul)
            $('#edit_pengarang').val(pengarang)
            $('#edit_penerbit').val(penerbit)
        })

        $('.detail-post').on('click', function () {
                var id = $(this).data('id')
                var judul = $(this).data('judul')
                var pengarang = $(this).data('pengarang')
                var penerbit = $(this).data('penerbit')

                $('#DetailPostModal').modal('show')

                $('#detail_id').val(id)
                $('#detail_judul').val(judul)
                $('#detail_pengarang').val(pengarang)
                $('#detail_penerbit').val(penerbit)
            })

        $('.delete-post').on('click', function () {
            var id = $(this).data('id')

            $('#deletePostModal').modal('show')

            $('#delete_id').val(id)
        })
    </script>
</body>

</html>